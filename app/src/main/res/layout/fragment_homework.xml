<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homework_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SubjectsFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/homework_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/homework_switchButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content "
            android:orientation="horizontal">

            <Button
                android:id="@+id/homework_buttonToDo"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/divider"
                android:text="Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                tools:text="To Do" />

            <Button
                android:id="@+id/homework_buttonDone"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/secondary_text"
                android:elevation="0dp"
                android:text="Button"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                tools:text="Done" />

        </LinearLayout>

        <ListView
            android:id="@+id/homework_listHomework"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/homework_floatingActionButton_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:onClick="onPlusClick"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add" />

</FrameLayout>